<!-- start pagination -->
<div class="pagination-wrap">
    <nav class="pagination clearfix" role="navigation">
        {{#if prev}}
        <a class="newer-posts btn btn-default" href="{{page_url prev}}"> <i class="fa fa-long-arrow-left fa-fw"></i> {{t "Newer Posts"}}</a>
        {{/if}}
        <span class="page-number">{{t "Page {page} of {pages}" page=page pages=pages}}</span>
        {{#if next}}
        <a class="older-posts btn btn-default" href="{{page_url next}}">{{t "Older Posts"}} <i class="fa fa-long-arrow-right fa-fw"></i></a>
        {{/if}}
    </nav>
</div>
<!-- end pagination -->