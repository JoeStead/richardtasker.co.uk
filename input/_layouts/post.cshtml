<body >
@Html.Partial("~/_layouts/_header.cshtml")
<!-- start main content area -->
<section class="main-content">
    <div class="container">
        <div class="row">
            <div class="col-md-10 col-md-offset-1 content-wrap">
                <!-- start post -->
                <article class="post">
                    @if (!string.IsNullOrEmpty(Model.String("image")))
                    {
                        <div class="featured-media">
                            <img class="gray" src="@Model.String("image")" alt="@Model.String("title")">
                        </div>
                    }
                    <div class="post-inner-wrap">
                        <header class="post-header align-center">
                            <h2 class="post-title">@Html.Raw(Model.String("title"))</h2>
                            <div class="post-meta">
                                <span class="date">@date.ToString("dd MMM, yyyy")</span> &#47;
                                <span class="author">
                                    By  @Model.String("Author")
                                </span>
                            </div>
                            @if (@Model.Bool("featured", false))
                            {
                                <div class="featured">Featured</div>
                            }
                            </header>
                        <div class="post-content">
                            @RenderBody()
                        </div>
                        <footer class="post-footer clearfix">
                            <div class="pull-left tag-list">
                                <i class="fa fa-folder-o"></i>
                                @getTags(Model)
                            </div>
                            <div class="pull-right comment">
                                <i class="fa fa-comment-o"></i>
                                <a href="@Model.String("permalink")#disqus_thread">0 Comments</a>
                            </div>
                        </footer>
                    </div>
                </article>
                <div class="share-author-wrap">
					@Html.Partial("~/_layouts/_about-author.cshtml")
					@Html.Partial("~/_layouts/_share.cshtml")
                </div>
                @Html.Partial("~/_layouts/_comments.cshtml")
                @* @Html.Partial("~/_layouts/_pagination.cshtml") I can't figure this out ATM*@
                <!-- end post -->
            </div>
        </div>
    </div>
</section>
